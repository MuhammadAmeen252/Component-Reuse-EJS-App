</head>
<body>
    <!--include Header-->
    <%-include('includes/_header')%>
    <!--/include Header-->

    
    <!--Main site-->
    <main id ="site-main">
        <div class="container">
            <a href="/" class="btn btn-light mt-2"><i class="fas fa-angle-double-left"></i> Back</a>
            <%if(name){%>
                <h4 class="" style="margin-top: 5%;">Component Found Successfully!</h4>
                <hr style="color: #d4d4d4;">
                <h5>Component Name</h5>  
                <p><%= name%></p>
                <br>
                <h5>Component Code</h5>
                    <pre><%= code%></pre> 
            <%} else {%>
                <h4 class="" style="margin-top: 5%;">Sorry! No Component Found matching this name.</h4>
            <%}%>
            
                
                

        </div>
    </main>
    
    
    <!--Main site-->

    <!--include Footer-->
        <%-include('includes/_footer')%>
    <!--/include Footer-->
    